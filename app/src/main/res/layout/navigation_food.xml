<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/navigation_bar"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="#ffffffff">

    <RelativeLayout
        android:id="@id/left_button"
        android:layout_width="50.0dip"
        android:layout_height="48.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:paddingLeft="10.0dip"
            android:src="@drawable/food_back_selecter"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200.0dip"
        android:layout_height="48.0dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/right_button"
        android:layout_toRightOf="@id/left_button">

        <RelativeLayout
            android:id="@id/rg_nav_content"
            android:layout_width="150.0dip"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@id/choose_dishes"
                android:layout_width="75.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@id/choose_dishes_tv"
                    android:layout_width="54.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="@string/choose_dishes"
                    android:textColor="@drawable/food_navigation_text_bg"
                    android:textSize="18.0sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@id/middleSpace"
                android:layout_width="42.0dip"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@id/restaurant"
                android:layout_width="75.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@id/restaurant_tv"
                    android:layout_width="54.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/food_restaurant"
                    android:textColor="@drawable/food_navigation_text_bg"
                    android:textSize="18.0sp" />
            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@id/restaurant_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-8.0dip"
            android:layout_toRightOf="@id/rg_nav_content" />

        <LinearLayout
            android:layout_width="150.0dip"
            android:layout_height="2.0dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/iv_nav_indicator"
                android:layout_width="54.0dip"
                android:layout_height="2.0dip"
                android:background="#ffe72b48"
                android:scaleType="matrix" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@id/right_button"
        android:layout_width="50.0dip"
        android:layout_height="48.0dip"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:paddingRight="10.0dip"
        android:src="@drawable/back_red"
        android:visibility="visible" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/round" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:src="@color/round" />
</RelativeLayout>